extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}.jpg`, alt="").img-fluid
            .col-md-7
                h1 #{viaje.titulo}
                p
                    i.fas.fa-calendar-alt
                    |  #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |  #{viaje.precio}
                p
                    i.fas.fa-users
                    |  #{viaje.disponibles}
                p=viaje.descripcion